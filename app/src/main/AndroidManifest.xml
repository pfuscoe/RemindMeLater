<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="patrick.fuscoe.remindmelater">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <receiver android:name="patrick.fuscoe.remindmelater.receiver.ReminderAlarmReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="patrick.fuscoe.remindmelater.receiver.ReminderAlarmReceiver"></action>
            </intent-filter>
        </receiver>

        <receiver android:name="patrick.fuscoe.remindmelater.receiver.BootReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"></action>
            </intent-filter>
        </receiver>

        <receiver android:name="patrick.fuscoe.remindmelater.receiver.NotificationDoneReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="patrick.fuscoe.remindmelater.receiver.NotificationDoneReceiver"></action>
            </intent-filter>
        </receiver>

        <receiver android:name="patrick.fuscoe.remindmelater.receiver.NotificationSnoozeReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="patrick.fuscoe.remindmelater.receiver.NotificationSnoozeReceiver"></action>
            </intent-filter>
        </receiver>

        <receiver android:name="patrick.fuscoe.remindmelater.receiver.NotificationDismissReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="patrick.fuscoe.remindmelater.receiver.NotificationDismissReceiver"></action>
            </intent-filter>
        </receiver>

        <activity
            android:name=".ReminderDetailsActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="patrick.fuscoe.remindmelater.MainActivity" />
        </activity>
        <activity
            android:name=".ToDoItemListActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="patrick.fuscoe.remindmelater.MainActivity" />
        </activity>
        <activity
            android:name=".FirebaseSignInActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:parentActivityName=".FirebaseSignInActivity"
            android:theme="@style/AppTheme.NoActionBar" />
    </application>

</manifest>